{
  "name": "wakpaper-test",
  "version": "0.0.0-a",
  "description": "왁페이퍼 테스트용입니다.",
  "main": "dist/src/main.js",
  "scripts": {
    "gyp:configure": "node-gyp configure",
    "gyp:build": "node-gyp rebuild",
    "build": "tsc",
    "start": "yarn build && electron .",
    "deploy:win": "yarn deploy:win32 && yarn deploy:win64",
    "deploy:win32": "yarn build && electron-builder --win nsis:ia32",
    "deploy:win64": "yarn build && electron-builder --win --x64"
  },
  "build": {
    "productName": "왁페이퍼 테스트",
    "appId": "wakpaper.wakpaper-test",
    "win": {
      "icon": "assets/imgs/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "./src",
      "output": "./deploy/"
    },
    "extraResources": ["assets/**"]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bindings": "^1.5.2",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "electron-as-wallpaper": "^1.0.3",
    "node-addon-api": "^7.0.0"
  }
}
