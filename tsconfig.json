{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./",
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"]
    }
  },
  "include": ["src"]
}